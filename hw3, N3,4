#задача 3
def is_palindrome(s):
  if len(s)<=1:
    return True
  if s[0] == s[-1]:
        return is_palindrome(s[1:-1])
  else:
        return False
s = str(input("Введите строку: "))
if (is_palindrome(s) == True):
    print("Это палиндром!")
else:
    print("Это не палиндром!")

